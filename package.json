{
  "name": "@ruanitto/adonis-acl",
  "version": "1.2.0",
  "description": "Adonis ACL system",
  "main": "src/Acl/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm run test:cleanup && npm run lint",
    "posttest": "npm run test:cleanup && npm run coverage",
    "test:cleanup": "rm -rf test/database && rm -rf test/tmp",
    "test:local": "NO_ANSI=false FORCE_COLOR=true DB=sqlite3 nyc node japaFile.js",
    "test": "npm run test:local",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged",
      "pre-push": "npm run test && lint-staged"
    }
  },
  "author": "Evgeny Razumov (enniel)",
  "license": "MIT",
  "dependencies": {
    "acler": "^1.0.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.4",
    "macroable": "^2.0.2",
    "node-exceptions": "^4.0.1"
  },
  "devDependencies": {
    "@adonisjs/ace": "^4.0.7",
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/lucid": "^6.1.3",
    "@adonisjs/sink": "^1.0.13",
    "bluebird": "^3.7.2",
    "child_process": "^1.0.2",
    "coveralls": "^3.0.5",
    "dotenv": "^8.0.0",
    "edge.js": "^1.1.3",
    "husky": "^3.0.0",
    "japa": "^2.0.10",
    "japa-cli": "^1.0.1",
    "lint-staged": "^9.2.0",
    "mysql": "^2.13.0",
    "nyc": "^14.1.1",
    "pg": "^7.11.0",
    "sqlite3": "^4.0.9",
    "standard": "^13.0.2",
    "walk-sync": "^2.0.2"
  },
  "nyc": {
    "include": [
      "src",
      "providers",
      "commands"
    ]
  },
  "standard": {
    "globals": [
      "use",
      "make"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rocketseat/adonis-acl.git"
  },
  "keywords": [
    "acl",
    "adonis"
  ],
  "bugs": {
    "url": "https://github.com/Rocketseat/adonis-acl/issues"
  },
  "homepage": "https://github.com/Rocketseat/adonis-acl#readme"
}
